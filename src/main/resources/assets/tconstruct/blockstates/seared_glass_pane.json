{
  "multipart": [
    { "apply": { "model": "tconstruct:block/smeltery/glass/pane_post" }},
    
    { "when": { "north": true },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_side" }
    },
    { "when": { "north": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside" }
    },
    { "when": { "north": false, "east": false, "west": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside_edge" }
    },
    
    { "when": { "east": true },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_side", "y": 90 }
    },
    { "when": { "east": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside_alt" }
    },
    { "when": { "east": false, "north": false, "south": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside_edge", "y": 90 }
    },
    
    { "when": { "south": true },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_side_alt" }
    },
    { "when": { "south": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside_alt", "y": 90 }
    },
    { "when": { "south": false, "east": false, "west": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside_edge", "y": 180 }
    },
    
    { "when": { "west": true },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_side_alt", "y": 90 }
    },
    { "when": { "west": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside", "y": 270 }
    },
    { "when": { "west": false, "north": false, "south": false },
      "apply": { "model": "tconstruct:block/smeltery/glass/pane_noside_edge", "y": 270 }
    }
  ]
}
