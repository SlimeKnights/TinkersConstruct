{
  "multipart": [
    {
      "when": { "up": "false", "down": "false" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/both" }
    },
    {
      "when": { "up": "false", "down": "true" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/top" }
    },
    {
      "when": { "up": "true", "down": "false" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/bottom" }
    },
    {
      "when": { "up": "true", "down": "true" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/neither" }
    },

    {
      "when": { "north": "true" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/side", "y": 180 }
    },
    {
      "when": { "east": "true" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/side", "y": 270 }
    },
    {
      "when": { "south": "true" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/side" }
    },
    {
      "when": { "west": "true" },
      "apply": { "model": "tconstruct:block/platform/exposed_copper/side", "y": 90 }
    }
  ]
}