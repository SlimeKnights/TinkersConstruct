{
  "multipart": [
    { "apply": { "model": "tconstruct:block/foundry/scorched/fence_post" }},
    
    { "when": { "north": "true" },
      "apply": { "model": "tconstruct:block/foundry/scorched/fence_side", "uvlock": true }},
    { "when": { "east": "true" },
      "apply": { "model": "tconstruct:block/foundry/scorched/fence_side", "y": 90, "uvlock": true
      }
    },
    { "when": { "south": "true" },
      "apply": { "model": "tconstruct:block/foundry/scorched/fence_side", "y": 180, "uvlock": true }},
    { "when": { "west": "true" },
      "apply": { "model": "tconstruct:block/foundry/scorched/fence_side", "y": 270, "uvlock": true }}
  ]
}